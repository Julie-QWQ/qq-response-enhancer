{
  "name": "electron-reply-suggester",
  "version": "0.1.0",
  "description": "Reply Suggester Desktop (Electron + React + TypeScript)",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on http://localhost:1420 && cross-env VITE_DEV_SERVER_URL=http://localhost:1420 electron .\"",
    "start": "electron .",
    "build:web": "vite build",
    "build": "npm run build:web",
    "dist": "npm run build:web && electron-builder"
  },
  "build": {
    "appId": "com.reply.suggester.electron",
    "productName": "Reply Suggester",
    "files": [
      "electron/**/*",
      "dist/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility"
    }
  },
  "dependencies": {
    "auto-launch": "^5.0.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "typescript": "~5.8.3",
    "vite": "^7.0.4",
    "wait-on": "^8.0.1"
  }
}
